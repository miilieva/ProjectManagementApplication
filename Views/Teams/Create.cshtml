@model ProjectManagement_Mirela.Dto.Team.CreateTeamDto

@{
    ViewData["Title"] = "Create Team";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Create New Team</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="Create">
                <div class="form-group">
                    <label for="name">Team Name</label>
                    <input type="text" id="name" name="Name" class="form-control" placeholder="Enter team name" required />
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <button type="submit" class="btn btn-primary">Create Team</button>
                    <a href="/Teams" class="btn btn-secondary">Back to Teams</a>
                </div>
            </form>
        </div>
    </div>
</div>
